#%RAML 1.0
title: Inheritance API
version: 1.0
baseUri: https://api.example.com

types:
  Person:
    type: object
    properties:
      id:
        type: integer
      name:
        type: string
      email:
        type: string
  
  Employee:
    type: Person
    properties:
      employeeId:
        type: string
      department:
        type: string
  
  Manager:
    type: Employee
    properties:
      teamSize:
        type: integer

/employees:
  get:
    responses:
      200:
        body:
          application/json:
            type: Employee[]
  
  /{employeeId}:
    get:
      responses:
        200:
          body:
            application/json:
              type: Employee
              