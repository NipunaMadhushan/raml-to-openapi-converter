{
  "openapi": "3.0.0",
  "info": {
    "title": "Inheritance API",
    "version": "1.0"
  },
  "servers": [
    {
      "url": "https://api.example.com"
    }
  ],
  "components": {
    "schemas": {
      "Person": {
        "title": "Person",
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          }
        },
        "additionalProperties": true
      },
      "Employee": {
        "title": "Employee",
        "allOf": [
          {
            "$ref": "#/components/schemas/Person"
          },
          {
            "type": "object",
            "properties": {
              "employeeId": {
                "type": "string"
              },
              "department": {
                "type": "string"
              }
            },
            "additionalProperties": true
          }
        ]
      },
      "Manager": {
        "title": "Manager",
        "allOf": [
          {
            "$ref": "#/components/schemas/Employee"
          },
          {
            "type": "object",
            "properties": {
              "teamSize": {
                "type": "integer"
              }
            },
            "additionalProperties": true
          }
        ]
      },
      "EmployeeArray": {
        "type": "array",
        "items": {
          "$ref": "#/components/schemas/Employee"
        }
      }
    }
  },
  "paths": {
    "/employees": {
      "get": {
        "summary": "get",
        "operationId": "get_employees",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EmployeeArray"
                }
              }
            }
          }
        }
      }
    },
    "/employees/{employeeId}": {
      "get": {
        "summary": "get",
        "operationId": "get_employees_employeeId",
        "parameters": [
          {
            "name": "employeeId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Employee"
                }
              }
            }
          }
        }
      }
    }
  }
}
