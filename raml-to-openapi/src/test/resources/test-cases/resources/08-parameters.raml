#%RAML 1.0
title: Parameters API
version: 1.0
baseUri: https://api.example.com

/search:
  get:
    description: Search with various parameters
    queryParameters:
      q:
        type: string
        description: Search query
        required: true
        minLength: 1
      category:
        type: string
        enum: [electronics, clothing, books]
        required: false
      minPrice:
        type: number
        minimum: 0
        required: false
      maxPrice:
        type: number
        minimum: 0
        required: false
      page:
        type: integer
        default: 1
        minimum: 1
      limit:
        type: integer
        default: 20
        minimum: 1
        maximum: 100
    headers:
      X-Request-ID:
        type: string
        description: Request tracking ID
        required: false
    responses:
      200:
        description: Search results
        headers:
          X-Total-Count:
            type: integer
            description: Total number of results
            