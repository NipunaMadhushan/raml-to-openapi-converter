<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for important messages -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Only show WARN and ERROR on console -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>

    <!-- File appender for detailed logs -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>raml-to-openapi-cli.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>

    <!-- Specific loggers -->
    <logger name="org.ballerina.ramltoopenapi" level="INFO" />

    <!-- Suppress verbose third-party logging -->
    <logger name="org.raml" level="WARN" />
    <logger name="io.swagger" level="WARN" />
    <logger name="com.fasterxml.jackson" level="WARN" />
</configuration>

